<%= form_for(company) do |f| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="field">
    <%= f.label :title, "Company name: " %> <br/>
    <%= f.text_field :title %>
   </div><br/>

   <div class="field">
    <%= f.label :ticker, "Ticker for TradingView chart: " %> <br/>
    <%= f.text_field :ticker %>
   </div><br/>

   <div class="field">
    <%= f.label :GTicker, "Ticker for Google Finance API: " %> <br/>
    <%= f.text_field :GTicker %>
   </div><br/>

   <div class="field">
    <%= f.label :exch, "Exchange for Google Finance API: (eg. CPH/NASDAQ)" %> <br/>
    <%= f.text_field :exch %>
   </div><br/>

   <div class="field">
    <%= f.label :yticker, "Ticker for Yahoo chart(This will only become handy if google api doesnt provide any data): " %> <br/>
    <%= f.text_field :yticker %>
   </div><br/>

   <div class="field">
    <%= f.label :description, "Description: " %> <br/>
    <%= f.text_area :description %>
   </div><br/>

   <div class="field">
    <%= f.label :focus, "Focus: " %> <br/>
    <%= f.text_area :focus %>
   </div><br/>

   <div class="field">
    <%= f.label :logo, "logo link: " %> <br/>
    <%= f.text_field :logo %>
  </div><br/>





  <div class="actions">
    <%= f.submit "Create company", class: "btn btn-primary" %>
  </div>

<% end %>
